<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".payment.ShippingActivity"
    android:orientation="vertical">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:padding="20dp"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Billing Address"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/contact_name"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_contact_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:text="Brian Zifac"
                    android:padding="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/street_address"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_street_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6820 n 15th ave"
                    android:padding="10dp"
                    android:inputType="text"
                    android:maxLines="1"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/apt_suit"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_apartment_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Apt 254"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/city_state_country"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_city_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Phoenix"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="Province"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_state_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AZ"
                    android:padding="10dp"
                    android:inputType="textCapSentences"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:hint="AZ"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="Country"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_country_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="US"
                    android:padding="10dp"
                    android:inputType="textCapSentences"
                    android:maxLength="2"
                    android:maxLines="1"
                    android:hint="US"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/zip_postalcode"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_postal_code_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="85015"
                    android:inputType="text"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:gravity="right"
                    android:text="@string/phone"/>
                <EditText
                    android:layout_weight="1"
                    android:id="@+id/shipping_mobile_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+15204063923"
                    android:inputType="phone"
                    android:maxLines="1"
                    android:padding="10dp"
                    android:hint="+1234567890"
                    android:layout_marginVertical="5dp"
                    android:background="@drawable/rounded_corners_edittext_dark"/>
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:orientation="horizontal" >

        <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_btn"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="Cancel"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:backgroundTint="@color/colorAccentGrey" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirm_btn"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/confirm"
            android:textAllCaps="true"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:textAlignment="center"
             />

    </LinearLayout>
</LinearLayout>