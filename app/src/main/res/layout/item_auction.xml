<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/layout_auction"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        card_view:cardElevation="3dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/auction_photo"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"/>
                <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/countDown"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingStart="10dp"
                        android:paddingTop="0dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="6dp"
                        app:isHideTimeBackground="true"
                        app:isShowDay="true"
                        app:isShowHour="true"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isTimeTextBold="true"
                        app:suffixDay="D"
                        app:suffixGravity="bottom"
                        app:suffixHour="H"
                        app:suffixMinute="M"
                        app:suffixSecond="S"
                        app:suffixTextColor="@color/black"
                        app:suffixTextSize="8dp"
                        app:timeTextColor="@color/text"
                    card_view:isTimeTextBold="true"
                        app:timeTextSize="14dp" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/auction_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/title"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category"
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/auction_cat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_price"
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/auction_start_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:text="$ 0.0 "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_time"
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/auction_post_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:text="left 1 day"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time Limit: "
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right">

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bid_price"
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/auction_bet_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:text="$ 0.0 "/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="3dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        android:textSize="11dp"
                        android:textColor="@color/text_color_dark"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/auction_status"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Started"
                        android:textSize="11dp"
                        android:gravity="end"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/auction_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_place"
                        android:drawablePadding="5dp"
                        android:layout_marginVertical="3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/auction_bidders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:textColor="@color/black"
                        android:text="0"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/shipping_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/auction_shipping"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="5dp"
                        android:layout_marginVertical="3dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="@string/shipping"
                        android:textColor="@color/text_color_dark"
                        android:textSize="11dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/auction_shipping_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:textSize="11dp"
                        android:text="0"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/winner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/winner"
                            android:textSize="11dp"
                            android:textColor="@color/text_color_dark"
                            android:textStyle="bold"
                            />
                        <TextView
                            android:id="@+id/winner_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:gravity="end"
                            android:textStyle="bold"
                            android:textSize="11dp"
                            android:textColor="@color/green"
                            />
                    </LinearLayout>
                    <TextView
                        android:id="@+id/winner_detail"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/view_winner_shipping_address"
                        android:textStyle="bold"
                        android:textSize="11dp"
                        android:textColor="@color/quantum_purple"/>
                </LinearLayout>
                <Button
                    android:id="@+id/btn_auction_confirm"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/green"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="45dp"
                    android:text="@string/confirm"
                    android:textColor="@color/white"
                    />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>